<div class="container-fluid">
 <div class="row">
    <div class="col-12">
      <div class="signup card">
          <div class="card body">
            <div class="signup title">ClapPaws</div>
            <% if devise_mapping.omniauthable? %>
                <% resource_class.omniauth_providers.each do |provider| %>
                    <% if provider.to_s.titleize == "Instagram"  %>
                      <%= link_to "<i class='fa fa-instagram'></i>  Log in with ".html_safe + "#{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), :class => "btn signup" %>
                    <% end %>
                <% end %>
            <% end %>
            <hr class="h-divider" />
            <div class="form">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="signgup form-group">
                  <%= f.text_field :login, :placeholder => "Username or Email", :class => "form-control", autofocus: true %>
              </div>
              <div class="signup form-group">
                  <%= f.password_field :password, :placeholder => "Password", :class => "form-control", autocomplete: "off" %>
              </div>
              <div class="signup form-group">
                <%= f.submit "Log in", :class => "btn signup" %>
              </div>
              <%= render 'layouts/messages' %>
            <% end %>
            </div>
          </div>
      </div>
      <div class="signup card footer">
        <div class="signup card-text">Don't have an account?
          <a href="#" class="card-link">
            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                <%= link_to "Sign up", new_registration_path(resource_name) %>
            <% end -%></a>
        </div>
      </div>
    </div>
 </div>
</div>