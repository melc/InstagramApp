<div class="container-fluid">
  <div class="signup row">
    <div class="col-12">
      <div class="signup card">
        <div class="card body">
          <div class="signup title">ClapPaws</div>
          <%- if devise_mapping.omniauthable? %>
              <%- resource_class.omniauth_providers.each do |provider| %>
                  <% if provider.to_s.titleize == "Instagram"  %>
                      <%= link_to "<i class='fa fa-instagram'></i>  Log in with ".html_safe + "#{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), :class => "btn signup" %>
                  <% end %>
              <% end %>
          <% end -%>
          <hr class="h-divider" >
          <div class="form">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <div class="signgup form-group">
                <%= f.text_field :username, :placeholder => "Username", :class => "form-control", autofocus: true %>
              </div>

              <div class="signgup form-group">
                <%= f.email_field :email, :placeholder => "Email", :class => "form-control" %>
              </div>

              <div class="signgup form-group">
                <%= f.text_field :fullname, :placeholder => "Full Name", :class => "form-control" %>
              </div>

              <div class="signgup form-group">
                <%= f.password_field :password, :placeholder => "Password", autocomplete: "off", :class => "form-control" %>
              </div>

              <div class="signgup form-group">
                <%= f.password_field :password_confirmation, :placeholder => "Password Confirmation", autocomplete: "off", :class => "form-control" %>
              </div>

              <div class="signgup form-group">
                <%= f.submit "Sign up", :class => "btn signup" %>
              </div>
            <% end %>
          </div>
          <%= devise_error_messages! %>
          <div class="signup card-text">
            <p>By signing up, you agree to our</p>
            <a href="#" data-toggle="modal" data-target="#privacyModalLong">Terms & Privacy Policy.</a>

            <!-- Modal -->
            <div class="modal fade" id="privacyModalLong" tabindex="-1" role="dialog" aria-labelledby="privacyModalLongTitle" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="privacy modal-title" id="privacyModalLongTitle">ClapPaws Privacy Policy</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                      <%= File.read("privacy_policy.txt").html_safe %>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="signup card footer">
        <div class="signup card-text">
            Have an account? <span>
            <%- if controller_name != 'sessions' %>
              <%= link_to "Log in", new_session_path(resource_name), :class => "card-link" %>
            <% end -%></span>
        </div>
      </div>
    </div>
  </div>
</div>